<h1>New lecture</h1>

<%= form_for(@lecture) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :course_id %><br />
    <%= f.text_field :course_id %>
  </p>
  <p>
    <%= f.label :person_id %><br />
    <%= f.text_field :person_id %>
  </p>
  <p>
    <%= f.label :term %><br />
    <%= f.text_field :term %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :day %><br />
    <%= f.text_area :day %>
  </p>
  <p>
    <%= f.label :hour %><br />
    <%= f.text_area :hour %>
  </p>
  <p>
    <%= f.label :exam %><br />
    <%= f.text_area :exam %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', lectures_path %>
