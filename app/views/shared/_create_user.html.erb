
<% user = create_user %>
      <div class ="separator_class">&nbsp</div>
      <div class ="content_class" style="width: 100%">
      <div class ="pad_class">
      <h3> New User Account </h3>
      <% if user.name.length !=0 %>
         <form action="/users/admin_update_user" method="post" onsubmit="new Ajax.Request('/users/admin_update_user', {asynchronous:true, evalScripts:true, parameters:Form.serialize(this)}); return false;"><div style="margin:0;padding:0"><input name="authenticity_token" type="hidden" value= <%= raw  "#{form_authenticity_token}" %> /></div>
         <% submit_text =  "Update Account" %>
         <input type="text" name="user_id" value=<%= raw "#{user.id}" %>  style="visibility: hidden"  />
      <%  else %>
         <form action="/users/new_user" method="post" onsubmit="new Ajax.Request('/users/new_user', {asynchronous:true, evalScripts:true, parameters:Form.serialize(this)}); return false;"><div style="margin:0;padding:0"><input name="authenticity_token" type="hidden" value= <%= raw  "#{form_authenticity_token}" %> /></div>
          <% submit_text = "Create Account" %>
      <% end %>

        <table>
        <tr>  <td> User Name:</td> <td> <input id ="user_name" type="text" value=<%= raw "#{user.name}" %>  name="user[name]"    />  </td> </tr>
        <tr>  <td> New Password </td> <td><input id="user_password" type="password" value="" name="user[password]"  />  </td> </tr>
          <tr>  <td>Confirm Password </td> <td> <input type="password"  value="" name="user[password_confirmation]" />  </td> </tr>
        </table>
         <input type="text" name="user[person_id]" value=<%= user.person_id %>  style="visibility: hidden"  />
         <input name="commit" type="submit" value=<%= raw  "#{submit_text}" %> />
      </form>
      </div>
      </div>
      <script type="text/javascript">
       jQuery(window).on( 'load', function() {
        jQuery('#user_name').val( <%= raw "#{user.name}" %> );
        jQuery('#user_password').val("");});

        </script>
     